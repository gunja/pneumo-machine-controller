<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:FeedsView="http://schemas.android.com/apk/res-auto"
    xmlns:ActuatorView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_readings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbars="vertical"
    tools:context=".manualFragment">

    <LinearLayout
        android:id="@+id/auto_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/d1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/d1_name" />

            <Button
                android:id="@+id/d2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/d2_name" />

            <Button
                android:id="@+id/d3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/d3_name" />

            <Button
                android:id="@+id/d4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/d4_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auto_detail_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="1497dp"
                android:layout_height="75dp"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/man_on_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/on_name" />

                <Button
                    android:id="@+id/man_off_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/off_name" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="1" />

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="2" />

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="3" />

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="5" />

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="6" />

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="7" />

            <com.example.manager_pneumo.FeedsView
                android:id="@+id/globa8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                FeedsView:own_id="8" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="left">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/left_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="1"/>

                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/right_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="2"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/left_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="3"/>

                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/right_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="4"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/left_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="5"/>

                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/right_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="6"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/left_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="7"/>

                    <com.example.manager_pneumo.ActuatorView
                        android:id="@+id/right_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ActuatorView:aw_own_id ="8"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>